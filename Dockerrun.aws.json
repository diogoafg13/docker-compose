{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions":[
        {
            "name": "client",
            "image": "diogoafg/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "diogoafg/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "diogoafg/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "diogoafg/multi-nginx",
            "essential": true,
            "portMappings":[
                {
                    "hostPort":80,
                    "containerPort":80
                }
            ],
            "links":[
                "client", "server"
            ]
        }
    ]
}